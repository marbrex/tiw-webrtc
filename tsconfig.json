{
    "compilerOptions": {
        "jsx": "react",
        "module": "ES2015",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "rootDir": "./client",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "plugins": [{ "name": "typescript-tslint-plugin" }]
    },
    "include": ["client", "index.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
